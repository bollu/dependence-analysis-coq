(* A timepoint for a schedule *)
Definition Timepoint := nat. 

(* We shouldn't think of this as an actual list, we should think of the list indeces
as indeces for the schedule to operate on *)
Definition Stmts := list Stmt.

Definition Program := Stmts  * Schedule.

Definition pSched (p: Program) : Schedule = snd p.
Definition pStmts (p: Program) : Stmts = fst p.

Definition Dependence := Timepoint * Timepoint.

Definition getInstr := (t: Timepoint) (p: Program) : Option Stmt :=
 list_in (pSched t) p
    

Definition ValidDependence : (p: Program) (d: Dependence) : Prop :=
    let sched := snd p in
    sched (fst d ) < sched(snd d) /\


